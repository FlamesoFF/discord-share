{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "baseUrl": "/",
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "chrome"
    ],
    "typeRoots": [
      "/node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "/node_modules",
    "**/*.spec.ts",
    "./src/share-window"
  ]
}