{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ]
    },
    "types": [
      "node",
      "chrome",
      "vue"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "outDir": "dist"
  },
  "files": [
    "./src/global.d.ts"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}