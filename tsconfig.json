{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ]
    },
    "types": [
      "node",
      "chrome",
      "vue"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "ES2018",
      "ES2019",
      "ES2020",
      "DOM"
    ],
    "outDir": "dist"
  },
  "files": [
    "./src/global.d.ts"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}